@page
@model RegisterModel

@{
  ViewData["Title"] = "İzmir Dershane - Kayıt Ol";
}

<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"]</title>
  <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")" />
</head>
<body>
  <header>
    <div class="container">
      <img src="@Url.Content("~/Content/Images/logo.png")" alt="İzmir Dershane" class="logo">
    </div>
  </header>
  </body>

  <main class="registration-container">
    <div class="container">
      <h1>İzmir Dershane'ye Kayıt Ol</h1>

      <div class="row">
        <div class="col-md-6">
          <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
              <div class="form-group">
                <label for="Input_Email" class="control-label">E-posta</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" id="Input_Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label for="Input_Password" class="control-label">Şifre</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifrenizi Girin" id="Input_Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label for="Input_ConfirmPassword" class="control-label">Şifreyi Doğrula</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifrenizi Tekrar Girin" id="Input_ConfirmPassword" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label for="Input_OgrenciNo" class="control-label">Öğrenci Numarası</label>
                <input asp-for="Input.OgrenciNo" class="form-control" aria-required="true" placeholder="Öğrenci Numarası" id="Input_OgrenciNo" />
                <span asp-validation-for="Input.OgrenciNo" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label for="Input_Adres" class="control-label">Adres</label>
                <input asp-for="Input.Adres" class="form-control" aria-required="true" placeholder="Adres" id="Input_Adres" />
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
              </div>
              <div class="form-group">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Kayıt Ol</button>
              </div>
            </form>
          </section>
        </div>
        <div class="col-md-6 dershane-bilgisi">
          <img src="@Url.Content("~/Content/Images/dershane-sinifi.jpg")" alt="İzmir Dershane Sınıfı" class="img-fluid">
          <p>Başarının ilk adımını atın! İzmir Dershane'nin deneyimli öğretmen kadrosu ve modernize sınıf ortamı ile geleceğe birlikte hazırlanalım.</p>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <div class="container">
      <p>&copy; @DateTime.Now.Year İzmir Dershane</p>
    </div>
  </footer>

