@model List<ProgramHftlk>


<div class="container">
    <div class="row pt-3 pb-4">
        <div><h3 style="color: #007bff;">Öğretmenler Sayfası</h3></div>
    </div>

    <table class="table table-bordered" style="background-color: rgba(255, 255, 255, 0.8);">
        <thead>
            <tr>
                @*  <th style="color: #007bff;">Id</th> *@
               
                <th style="color: #007bff;">Öğretmen  Ad & Soyad</th>
                <th style="color: #007bff;">Program Onay</th>
                <th style="color: #007bff;">Tarih </th>

            </tr>
        </thead>

        <tbody>
            @foreach (var programlar in Model)
            {
                <tr>
                    <td> @(programlar.Ogretmenler != null ? $"{programlar.Ogretmenler.Ad} {programlar.Ogretmenler.Soyad}" : "No Teacher")</td>
                    <td>@programlar.İste</td>
                    <td>@programlar.Tarih</td>
                    @* <td><a asp-controller="Ogretmenler" asp-action="Guncelle" asp-route-id="@programlar.Id" class=" btn btn-success btn-sm" type="button">Güncelle</a></td>
                    <td><a asp-controller="Ogretmenler" asp-action="Sil" asp-route-id="@programlar.Id" class=" btn btn-danger btn-sm" type="button">Sil</a></td> *@

                </tr>
            }
        </tbody>
    </table>

   


</div>







