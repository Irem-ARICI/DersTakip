@model Ogretmenler

<form method="post" enctype="multipart/form-data">

    <input asp-for="Resim" hidden />

    <div class="row" >
        <div class="col-8">
            <div class="border p-3 mt-5">
                <h2 class="text-primary">Öğretmen Güncelle </h2>



                <div class="mb-3">
                    <label asp-for="Ad" class="p-0">Yeni Öğretmen Ad Ekle:</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Soyad" class="p-0">Soyad Ekle:</label>
                    <input asp-for="Soyad" class="form-control" />
                    <span asp-validation-for="Soyad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Brans" class="p-0">Brans Ekle:</label>
                    <input asp-for="Brans" class="form-control" />
                    <span asp-validation-for="Brans" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Resim" class="p-0">Brans Ekle:</label>
                    <input type="file" name="file" class="form-control" />
                </div>

            </div>


            <button type="submit" class="btn btn-outline-secondary" style="width:250px">Öğretmen Bilgilerini Güncelle</button>

            <a asp-controller="Ogretmenler" asp-action="Index" class="btn btn-outline-secondary" type="button" style="width:250px">
                Öğretmenlere Geri Dön
            </a>
            
        </div>

        <div class="col-4">
            <img src="@Model.Resim" class="mt-5" width="90%" height="60%"
                style="border-radius:7px; border:1px #bbb9b9"/>
            

        </div>

    </div>


</form>





