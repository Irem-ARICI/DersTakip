@model List<Ogretmenler>

@if(TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div><h3 style="color: #007bff;">Öğretmenler Sayfası</h3></div>
    </div>

    <table class="table table-bordered" style="background-color: rgba(255, 255, 255, 0.8);">
        <thead>
            <tr>
               @*  <th style="color: #007bff;">Id</th> *@
                <th></th>
                <th style="color: #007bff;">Öğretmen  Ad & Soyad</th>
                <th style="color: #007bff;">Öğretmen Branş</th>
                <th></th>
                <th></th>
                
            </tr>
        </thead>

        <tbody>
            @foreach (var ogretmenler in Model)
            {
                <tr>
                   <td> <img src="@ogretmenler.Resim" width="200px" height="200px"/></td>
                    <td class="container d-flex align-items-center justify-content-center">@ogretmenler.Ad @ogretmenler.Soyad</td>
                    <td>@ogretmenler.Brans</td>
                    <td><a asp-controller="Ogretmenler" asp-action="Guncelle" asp-route-id="@ogretmenler.Id" class=" btn btn-success btn-sm" type="button">Güncelle</a></td>
                    <td><a asp-controller="Ogretmenler" asp-action="Sil" asp-route-id="@ogretmenler.Id" class=" btn btn-danger btn-sm" type="button">Sil</a></td>

                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Ogretmenler" asp-action="OgretmenEkle" class="btn btn-outline-primary" type="button">
                Yeni Öğretmen Ekle
            </a>
        </div>
    </div>

   
</div>
